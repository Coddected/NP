<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 배경 이미지용 ImageView -->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/background" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 버튼 생성 -->
        <Button
            android:id="@+id/start_button"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:background="@drawable/start"
            android:focusable="true"
            android:fontFamily="@font/noto_sans_bold"
            android:onClick="onStartButtonClicked"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="로그인하고 시작하기"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="532dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:text="NaturesPark"
        android:textAlignment="center"
        android:textColor="#3C3C3C"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="240dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/introduce2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:text="식물과의 조화, 식물과 함께하는 세상 만들기"
        android:textAlignment="center"
        app:layout_anchor="@+id/linearLayout2"
        app:layout_anchorGravity="bottom|center"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="272dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_anchor="@+id/linearLayout3"
        app:layout_anchorGravity="bottom|center"
        app:srcCompat="@mipmap/logo"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="131dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
